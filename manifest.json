{
  "manifest_version": 2,
  "name": "Bustem",
  "version": "1.0",
  "description": "Blocks crypto miners",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "images/logo.png"
  },
  "web_accessible_resources": [
    "blockpage.html",
    "blockpage.css",
    "blockpage.js",
    "images/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}